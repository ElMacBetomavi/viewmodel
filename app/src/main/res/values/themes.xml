<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EjemploDagger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. cambia el color del texto de los botones de un alert -->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- cambia el color de la barra superior fuera de la app. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!--cambia el color del texto en el navbar -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- cambia background color de los menus en general -->
        <item name="android:itemBackground">@color/medium_grey</item>+
    </style>

    <style name="DatePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#125E1F</item>
    </style>

